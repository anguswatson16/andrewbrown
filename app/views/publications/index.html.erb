<div class="wrapper">
  <div class="publications-banner-container">
    <%= render "shared/publications_banner" %>
  </div>
  <div class="publications-card-container">
    <div class="row">
      <% @publications.each do |publication| %>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <% if current_user %>
            <%= link_to publication_path(publication.id), method: :get do %>
              <%= render "shared/publication_card", publication: publication %>
            <% end %>
          <% else %>
            <%= render "shared/publication_card", publication: publication %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
