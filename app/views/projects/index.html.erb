<div class="wrapper">
  <div class="projects-banner-container">
    <%= render "shared/projects_banner" %>
  </div>
  <div class="projects-card-container">
    <div class="row">
      <% if @projects.present? %>
        <% @projects.each do |project| %>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <% if current_user %>
              <%= link_to project_path(project.id), method: :get do %>
                <%= render "shared/project_card", project: project %>
              <% end %>
            <% else %>
              <%= render "shared/project_card", project: project %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
