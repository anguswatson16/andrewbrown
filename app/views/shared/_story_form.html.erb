<%= simple_form_for(story) do |s| %>
  <%= s.input :name,
              label: "Header",
              input_html: { class: "edit-form-style" } %>
  <%= s.input :paragraph,
              label: "Brief Description",
              input_html: { class: "edit-form-style" } %>
  <%= s.input :website,
              label: "Link",
              input_html: { class: "edit-form-style" } %>
  <%= s.submit %>
<% end %>
