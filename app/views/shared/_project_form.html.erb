<%= simple_form_for(project) do |p| %>
  <%= p.input :name,
              label: "Name of Project",
              input_html: { class: "edit-form-style" } %>
  <%= p.input :description,
              label: "Brief Description of Project",
              input_html: { class: "edit-form-style" } %>
  <%= p.input :collaborators,
              label: "Project Collaborators",
              input_html: { class: "edit-form-style" } %>
  <%= p.input :notes,
              label: "Details of Project",
              input_html: { class: "edit-form-style" } %>
  <%= p.input :photo %>
  <%= p.input :photo_cache, as: :hidden %>
  <%= p.submit %>
<% end %>
