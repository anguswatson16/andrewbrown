<%= simple_form_for(publication) do |p| %>
  <%= p.input :name,
              label: "Name of Publication",
              input_html: { class: "edit-form-style" } %>
  <%= p.input :description,
              label: "Brief Description of Publication",
              input_html: { class: "edit-form-style" } %>
  <%= p.input :collaborators,
              label: "Publication Collaborators",
              input_html: { class: "edit-form-style" } %>
  <%= p.input :journal,
              label: "Journal Published In",
              input_html: { class: "edit-form-style" } %>
  <%= p.input :photo %>
  <%= p.input :photo_cache, as: :hidden %>
  <%= p.submit %>
<% end %>
